# Enable output compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Enable browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Video
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"

    # CSS, JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"

    # HTML documents
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    
    # Cache Control for static assets
    <FilesMatch "\.(ico|jpg|jpeg|png|gif|webp|css|js|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Cache Control for HTML files
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
</IfModule>

# Prevent directory listing
Options -Indexes

# Handle errors
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Redirect www to non-www
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.bcvworld\.com [NC]
RewriteRule ^(.*)$ https://bcvworld.com/$1 [L,R=301]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Route social bots to share preview for dynamic OG tags
RewriteCond %{QUERY_STRING} (^|&)id=([A-Za-z0-9_\-]+) [NC]
RewriteCond %{REQUEST_URI} ^/html/news/news-detail\.html$ [NC]
RewriteCond %{HTTP_USER_AGENT} (facebookexternalhit|Twitterbot|Slackbot|WhatsApp|TelegramBot|Discordbot|LinkedInBot) [NC]
RewriteRule ^.*$ /html/news/share.php?id=%2 [L]

# Optional: force preview via share=1
RewriteCond %{QUERY_STRING} (^|&)id=([A-Za-z0-9_\-]+) [NC]
RewriteCond %{QUERY_STRING} (^|&)share=1 [NC]
RewriteCond %{REQUEST_URI} ^/html/news/news-detail\.html$ [NC]
RewriteRule ^.*$ /html/news/share.php?id=%2 [L]

# Add MIME Types for downloads
AddType application/pdf .pdf
AddType application/zip .zip
AddType application/msword .doc
AddType application/vnd.openxmlformats-officedocument.wordprocessingml.document .docx

# Force download for templates
<Files "ats-templates.zip">
    ForceType application/zip
    Header set Content-Disposition "attachment"
</Files>

# Enable HTTP/2 if available
<IfModule mod_http2.c>
    Protocols h2 h2c http/1.1
</IfModule>

# Optimize Keep-Alive
<IfModule mod_headers.c>
    Header set Connection keep-alive
    Header set Keep-Alive "timeout=5, max=100"
</IfModule>

# Enable early hints for improved performance
<IfModule mod_headers.c>
    Header set Early-Hints "enabled"
</IfModule>
